{
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "parser": "yaml",
                "singleQuote": false,
                "useTabs": false,
                "tabWidth": 2
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json",
                "tabWidth": 2,
                "printWidth": 100
            }
        },
        {
            "files": "*.md",
            "options": {
                "parser": "markdown",
                "useTabs": false,
                "tabWidth": 2,
                "printWidth": 60
            }
        }
    ]
}
